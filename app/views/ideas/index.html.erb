<div class="body">
<h1 class="text">We welcome students' ideas. Please submit your ideas for them to show up here.</h1><br>
  <%= link_to new_idea_path do %>
  <div class="btn btn-primary btn-lg">SUBMIT IDEA</div>
  <% end %>
  <br><br><br>
  <hr style="width: 70%;"><br>
  <h1 class="big">IDEAS</h1>
  <br>
  <% @ideas.each do |idea| %>

  <h1 class="title"><%= idea.title %><% if current_user %><% if current_user.officer? %><%= link_to idea, method: :delete do %><i class="fa trash fa-trash-o"></i><% end %><% end %><% end %></h1>
  <h4 class="subtitle">by: <%= idea.firstname %> <%= idea.lastname %></h4><br>
  <%= link_to idea_path(idea) do %>
  <div class="btn btn-primary more">MORE INFO</div>
    <% end %>
    <div class="btn-group">
    <%= link_to like_idea_path(idea), method: :put do %>
    <div class="btn btn-primary up" type="button">
  <i class="fa fa-thumbs-o-up fa-lg"></i> <span class="badge"><%= idea.get_upvotes.size %></span>
</div>
<% end %>
<%= link_to dislike_idea_path(idea), method: :put do %>
    <div class="btn btn-primary down" type="button">
  <i class="fa fa-thumbs-o-down fa-lg"></i> <span class="badge"><%= idea.get_downvotes.size %></span>
</div>
<% end %>
</div>  <br><br><br><br><br>
  <hr style="width: 40%;">
  <% end %>
  <div class="page">
  <%= will_paginate @ideas, renderer: BootstrapPagination::Rails %>
  </div>
</div>
